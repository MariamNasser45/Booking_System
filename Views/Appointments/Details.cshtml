@model Doctor_Appointment.Models.Appointment;

@{
    ViewData["Title"] = "Details";

}

<h1>Details</h1>

<div>
    <h4>Appointment</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            <label asp-for="doctor"></label>
        </dt>
        <dd class = "col-sm-10">
            <p>@Model.doctor.FullName</p>
        </dd>
        <dt class = "col-sm-2">
            <label asp-for="patient"></label>
        </dt>
        <dd class = "col-sm-10">
            <p>@Model.patient.FullName</p>
        </dd>
        <dt class = "col-sm-2">
            <label asp-for="DateTime"></label>
        </dt>
        <dd class = "col-sm-10">
            <p>@Model.DateTime</p>
        </dd>
        
        <dt class = "col-sm-2">
            <label asp-for="AppointmentType"></label>
        </dt>
        <dd class = "col-sm-10">
            <p>@Model.AppointmentType</p>
        </dd>
        <dt class = "col-sm-2">
            <label asp-for="MedicalHistory"></label>
        </dt>
        <dd class = "col-sm-10">
            <p>@Model.MedicalHistory</p>
        </dd>
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model.appointmentID" asp-route-docId="@Model.DoctorID" class="btn btn-outline-warning">Edit</a>
    <a asp-action="Index" asp-route-PatientName="@Model.patient.FullName" class="btn btn-outline-dark">My All Appointments</a>
    <a asp-controller="Doctors" asp-action="SpecialistFilter" class="btn btn-outline-dark">Back to Doctors List</a>
</div>
