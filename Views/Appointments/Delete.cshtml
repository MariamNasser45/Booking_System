@model Doctor_Appointment.Models.Appointment

@{
    ViewData["Title"] = "Delete";
}

<h1>Delete</h1>

<h3>Are you sure you want to delete this?</h3>
<div>
    <h4>Appointment</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            <label asp-for="doctor"></label>
        </dt>
        <dd class = "col-sm-10">
            <p>@Model.doctor.FullName</p>
        </dd>
        <dt class="col-sm-2">
            <label asp-for="doctor.Clinic_Location"></label>
        </dt>
        <dd class="col-sm-10">
            <p>@Model.doctor.Clinic_PhoneNumber</p>
        </dd>
        <dt class="col-sm-2">
            <label asp-for="doctor.Clinic_PhoneNumber"></label>
        </dt>
        <dd class="col-sm-10">
            <p>@Model.doctor.FullName</p>
        </dd>
        <dt class="col-sm-2">
            <label asp-for="DateTime"></label>
        </dt>
        <dd class="col-sm-10">
            <p>@Model.DateTime</p>
        </dd>
        <dt class = "col-sm-2">
            <label asp-for="patient"></label>
        </dt>
        <dd class = "col-sm-10">
            <p>@Model.patient.FullName</p>
        </dd>
        <dt class = "col-sm-2">
            <label asp-for="AppointmentType"></label>
        </dt>
        <dd class = "col-sm-10">
            <p>@Model.AppointmentType</p>
        </dd>
        <dt class = "col-sm-2">
            <label asp-for="MedicalHistory"></label>
        </dt>
        <dd class = "col-sm-10">
            <p>@Model.MedicalHistory</p>
        </dd>
    </dl>
    
    <form method="post" asp-action="Delete">
        <input type="hidden" asp-for="DoctorID" />
        <input type="hidden" asp-for="PatientID" />
        <input type="submit" value="Submit Canclation" class="btn btn-outline-danger" /> 
        <a asp-action="Index" asp-route-PatientID="@Model.PatientID" class="btn btn-outline-dark">My All Appointments</a>
    </form>
</div>
