@model Doctor_Appointment.Models.Appointment

@{
    ViewData["Title"] = "Edit";

    var day = ViewBag.days;

}

<h1>Edit</h1>

<h4>Appointment</h4>


<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post" asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="DoctorID" />
            <input type="hidden" asp-for="PatientID" />
            <input type="hidden" asp-for="appointmentID" />

            <div class="form-group">
                <label asp-for="DateTime" class="control-label">Available Days</label>
                <select asp-for="DateTime" asp-items="day"></select>
                <span asp-validation-for="DateTime" class="text-danger"></span>
            </div>


            <div class="form-group">
                <label asp-for="AppointmentType" class="control-label"></label>
                <select asp-for="AppointmentType" class="form-control" asp-items="@Html.GetEnumSelectList<AppointmentType>()"></select>
                <span asp-validation-for="AppointmentType" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="MedicalHistory" class="control-label"></label>
                <input asp-for="MedicalHistory" class="form-control" />
                <span asp-validation-for="MedicalHistory" class="text-danger"></span>
            </div>
            <span class="form-group">
               
                <input type="submit" value="Save" class="btn btn-outline-success mt-3" style="margin-right:4px;" />
                
                <a asp-action="Index" asp-route-PatientID="@Model.PatientID"  class="btn btn-outline-dark mt-3">My All Appointments</a>

            </span>
        </form>
    </div>
</div>


@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
