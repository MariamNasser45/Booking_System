@model IEnumerable<Doctor_Appointment.Models.Appointment>

@{
    ViewData["Title"] = "Index";
}

<h3 class="d-flex justify-content-center m-3">All Appointments</h3>

<table class="table table-striped table-dark">
    <thead>
        <tr>
            <th>
                <label asp-for="First().doctor"></label>
            </th>
            <th>
                <label asp-for="First().patient"></label>
            </th>
       
            <th>
                <label asp-for="First().AppointmentType"></label>
            </th>
            <th>
                <label asp-for="First().MedicalHistory"></label>
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                <p>@item.doctor.FullName</p>
            </td>
            <td>
                <p>@item.patient.FullName</p>
            </td>
            <td>
                <p>@item.AppointmentType</p>
            </td>
            <td>
                 <p>@item.MedicalHistory</p>
            </td>
            <td>
                    <a asp-action="Edit" asp-route-id="@item.appointmentID" asp-route-docId="@item.DoctorID" class="btn btn-outline-warning">Edit</a>
                    <a asp-action="Delete" asp-route-id="@item.appointmentID" class="btn btn-outline-danger">Cancle</a>
            </td>
        </tr>
}
    </tbody>
</table>
