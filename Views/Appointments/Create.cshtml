@model Doctor_Appointment.Models.Appointment

@{
    ViewData["Title"] = "Create";
    var day = ViewBag.days;
    var appType = ViewBag.type;
}

<h1>Create</h1>

<h4>Appointment</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post" asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="DoctorID" class="control-label"></label>
                <select asp-for="DoctorID" onselect="true" class="form-control" asp-items="ViewBag.DoctorID"></select>
            </div>

            <div class="form-group">
                <label asp-for="patient.FullName" class="control-label"></label>
                <input asp-for="patient.FullName" class="form-control" />
                <span asp-validation-for="patient.FullName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="patient.gender" class="control-label"></label>
                <select asp-for="patient.gender" class="form-control" asp-items="@Html.GetEnumSelectList<Gender>()"></select>
                <span asp-validation-for="patient.gender" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="patient.Age" class="control-label"></label>
                <input asp-for="patient.Age" class="form-control" />
                <span asp-validation-for="patient.Age" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="patient.PhoneNumber" class="control-label"></label>
                <input asp-for="patient.PhoneNumber" class="form-control" />
                <span asp-validation-for="patient.PhoneNumber" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="patient.EmailAddress" class="control-label"></label>
                <input asp-for="patient.EmailAddress" class="form-control" />
                <span asp-validation-for="patient.EmailAddress" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="patient.Address" class="control-label"></label>
                <input asp-for="patient.Address" class="form-control" />
                <span asp-validation-for="patient.Address" class="text-danger"></span>
            </div>



  @*          <div class="form-group">
                <label asp-for="PatientID" class="control-label"></label>
                <input type="text" asp-for="PatientID" class="form-control"/>
            </div>*@
            @*using min propert to restrict date >= today ,
            to restrict DateOnly.now or TimeOnly.now use FromDateTime*@
            <div class="form-group">
                <label asp-for="DateTime" class="control-label">Your Appointment</label>
                <select asp-for="DateTime" asp-items="day"></select>
                <span asp-validation-for="DateTime" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="AppointmentType" class="control-label"></label>
                @{
                    if(Model.doctor.HomeExamination==false)
                    {
                        <select asp-for="AppointmentType" class="form-control" asp-items="@Html.GetEnumSelectList<AppointmentType>()"></select>
                        
                    }
                }
                <span asp-validation-for="AppointmentType" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="MedicalHistory" class="control-label"></label>
                <input asp-for="MedicalHistory" class="form-control" />
                <span asp-validation-for="MedicalHistory" class="text-danger"></span>
            </div>
            <div class="form-group mt-3">
                <input type="submit" asp-route-PatientID="PatientID" value=" Create" class="btn btn-outline-success" style="margin-right:4px;" />
                <a asp-controller="Doctors" asp-action="SpecialistFilter" class="btn btn-outline-dark">Back to Doctors List</a>
            </div>
        </form>
    </div>
</div>

<div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
