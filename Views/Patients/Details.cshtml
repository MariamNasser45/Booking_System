@model Doctor_Appointment.Models.Patient

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>Patient</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            <label asp-for="FullName"></label>
        </dt>
        <dd class = "col-sm-10">
            <p>@Model.FullName</p>
        </dd>
        <dt class = "col-sm-2">
            <label asp-for="gender"></label>
        </dt>
        <dd class = "col-sm-10">
            <p>@Model.gender</p>
        </dd>
        <dt class = "col-sm-2">
            <label asp-for="Age"></label>
        </dt>
        <dd class = "col-sm-10">
            <p>@Model.Age</p>
        </dd>
        <dt class = "col-sm-2">
            <label asp-for="PhoneNumber"></label>
        </dt>
        <dd class = "col-sm-10">
            <p>@Model.PhoneNumber</p>
        </dd>
        <dt class = "col-sm-2">
            <label asp-for="EmailAddress"></label>

        </dt>
        <dd class = "col-sm-10">
            <p>@Model.EmailAddress</p>
        </dd>
        <dt class = "col-sm-2">
            <label asp-for="Address"></label>
        </dt>
        <dd class = "col-sm-10">
            <p>@Model.Address</p>
        </dd>

    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model?.PatientID" class="btn btn-outline-warning">Edit</a>
    <a asp-action="Index" class="btn btn-outline-dark">Back to List</a>
</div>
