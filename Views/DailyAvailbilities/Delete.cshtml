    ViewData["Title"] = "Delete";
}

<h1>Delete</h1>

<h3>Are you sure you want to delete this?</h3>
<div>
    <h4>DailyAvailbility</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            <label asp-for="Day"></label>
        </dt>
        <dd class="col-sm-10">
            <p>@Model.Day</p>
        </dd>
        <dt class = "col-sm-2">
            <label asp-for="Date"></label>
        </dt>
        <dd class = "col-sm-10">
            <p>@Model.Date</p>
        </dd>
        <dt class = "col-sm-2">
            <label asp-for="Clinic_Time"></label>
        </dt>
        <dd class = "col-sm-10">
            <p>@Model.Clinic_Time</p>
        </dd>

        <dt class = "col-sm-2">
            <label asp-for="Isavailable"></label>
        </dt>
        <dd class = "col-sm-10">
            <p>@Model.Isavailable</p>
