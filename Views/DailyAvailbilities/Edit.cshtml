@model Doctor_Appointment.Models.DailyAvailbility

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>DailyAvailbility</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post" asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="DoctorID" class="control-label"></label><br/>
                <select asp-for="DoctorID" class="form-control" asp-items="ViewBag.DoctorID"></select>
               @*<input type="text" value="@ViewBag.DoctorID" />*@
                
                <span asp-validation-for="DoctorID" class="text-danger"></span>
            </div>
            <div class="form-group">
                @{
                    <label asp-for="Day" class="control-label"></label>
                    List<DayOfWeek> dayOfWeeks = new List<DayOfWeek>();
                    <select asp-for="Day" class="form-control">
                        @{
                            for (int i = 0; i < 7; i++)
                            {
                                DayOfWeek day;
                                day = (DayOfWeek)((i));
                                <option>@day</option>
                            }
                        }
                    </select>

                    <span asp-validation-for="Date" class="text-danger"></span>
                }
            </div>

            <input type="hidden" asp-for="Dayid" />
            <div class="form-group">
                <label asp-for="Date" class="control-label"></label>
                <input asp-for="Date" type="date" min="@DateOnly.FromDateTime(DateTime.Now).ToString("yyyy-MM-dd")" class="form-control" />
                <span asp-validation-for="Date" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Clinic_Time" class="control-label"></label>
                <input asp-for="Clinic_Time" type="time" class="form-control" />
                <span asp-validation-for="Clinic_Time" class="text-danger"></span>
            </div>

            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="Isavailable" /> @Html.DisplayNameFor(model => model.Isavailable)
                </label>
            </div>
            <div class="form-group mt-3">
                <input type="submit" value="Save" class="btn btn-outline-success" />
                <a asp-action="Index" asp-controller="DailyAvailbilities" asp-route-docid="@Model.DoctorID" class="btn btn-outline-dark">Back to List</a>

            </div>
        </form>
    </div>
</div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
