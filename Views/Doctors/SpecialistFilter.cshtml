@model IEnumerable<Doctor_Appointment.Models.Doctor>

@{
    ViewData["Title"] = "SpecialistFilter";
}


<form method="post" action="SpecialistFilter">

    <span class="d-flex justify-content-center mt-3">

        
        <select name="spectialist" class="form-select form-select-sm w-25" aria-label=".form-select-sm example" asp-items="@Html.GetEnumSelectList<Spectialist>()"></select>

        <select name="medicalDegree" class="form-select form-select-sm w-25" style="margin-left:5px;" aria-label=".form-select-sm example" asp-items="@Html.GetEnumSelectList<MedicalDegree>()"></select>

        <input type="submit" value="Search" class="btn btn-outline-dark" style="margin-left:5px;"/>
   
 </span>

</form>

<table class="table table-striped table-dark mt-3">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.FullName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.specialist)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Degree)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Description)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Clinic_Location)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Clinic_PhoneNumber)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.HomeExamination)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Price)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.WatingTime)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.FullName)
                </td>

                <td>
                    @Html.DisplayFor(modelItem => item.specialist)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Degree)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Description)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Clinic_Location)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Clinic_PhoneNumber)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.HomeExamination)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Price)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.WatingTime)
                </td>
                <td>
                    <a asp-action="Details" asp-controller="Doctors" asp-route-id="@item.DoctorID" class="btn btn-outline-info">Details</a>
                </td>
            </tr>
        }
    </tbody>
</table>
