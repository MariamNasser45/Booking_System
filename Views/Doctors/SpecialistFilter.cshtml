@model IEnumerable<Doctor_Appointment.Models.Doctor>

@{
    ViewData["Title"] = "SpecialistFilter";
}


<form method="post" action="SpecialistFilter">

    <span class="d-flex justify-content-center mt-3">

        
        <select name="spectialist" class="form-select form-select-sm w-25" aria-label=".form-select-sm example" asp-items="@Html.GetEnumSelectList<Spectialist>()">
            <option>All</option>
        </select>

        <select name="medicalDegree" class="form-select form-select-sm w-25" style="margin-left:5px;" aria-label=".form-select-sm example" asp-items="@Html.GetEnumSelectList<MedicalDegree>()">
            <option>All</option>
        </select>

        <input type="submit" value="Search" class="btn btn-outline-dark" style="margin-left:5px;"/>
   
 </span>

</form>

<table class="table table-striped table-dark mt-3">
    <thead>
        <tr>
            <th>
                <label asp-for="First().FullName"></label>
            </th>
            <th>
                <label asp-for="First().specialist"></label>
            </th>
            <th>
                <label asp-for="First().Degree"></label>
            </th>
            <th>
                <label asp-for="First().Description"></label>
            </th>
            <th>
                <label asp-for="First().Clinic_Location"></label>
            </th>
            <th>
                <label asp-for="First().Clinic_PhoneNumber"></label>
            </th>

            <th>
                <label asp-for="First().HomeExamination"></label>
            </th>

            <th>
                <label asp-for="First().Price"></label>
            </th>

            <th>
                <label asp-for="First().WatingTime"></label>
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    <p>@item.FullName</p>
                </td>
                <td>
                    <p>@item.specialist</p>
                </td>
                <td>
                    <p>@item.Degree</p>
                </td>
                <td>
                    <p>@item.Description</p>
                </td>
                <td>
                    <p>@item.Clinic_Location</p>
                </td>
                <td>
                    <p>@item.Clinic_PhoneNumber</p>
                </td>
                <td>
                    <p>@item.HomeExamination</p>
                </td>

                <td>
                    <p>@item.Price</p>
                </td>

                <td>
                    <p>@item.WatingTime</p>
                </td>

                <td>
                    <a asp-action="Details" asp-controller="Doctors" asp-route-id="@item.DoctorID" class="btn btn-outline-info">Details</a>
                </td>
            </tr>
        }
    </tbody>
</table>
